html
	font-size 62.5%
body
	height 100%
	margin 0
	padding 0
body
	height 100%
	margin 0
	padding 0
	-webkit-text-size-adjust 100%
.root
	background url('.././images/bg.png') repeat
	background-size 100% 100%
#page
	width 100%
	height 100%
	padding 50px
header
	font-family 'Ribeye Marrow', cursive
	font-weight 400
	font-size 4.8rem
	color #005900
	padding 20px
	width 80%
	border-bottom dotted 2px #005900

.main_area
	margin 20px
	display -webkit-box
	.btn
		width 15%
		height 440px
		background url('.././images/btn.png') no-repeat
		.start_btn
			padding 40px
			display inline
			font-size 2.4rem
			font-family 'Ribeye Marrow', cursive
			font-weight 400
			border-radius 150px
			color #d7ffbf
			background none;
	.number
		margin-left 30px
		background url('.././images/num_bg.png') no-repeat
		background-size 100%
		font-size 44rem
		span
			padding-left 25px
